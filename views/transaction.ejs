<div class="text-white flex flex-col justify-center items-center">
  <h1>Transaction</h1>

  <% if(message === "Insufficent Balance") { %>
  <h2>Please Add <%= ExtraBalance %> or more to complete the Transaction.</h2>
  <% } else { %>
  <h2><%= message %></h2>
  <% } %>
  <hr />
  <h2>Your Balance: <%= user.balance%></h2>
  <hr />
  <form action="/transaction/confirm" method="POST">
    <input type="hidden" name="_method" value="PUT" />
    <h4>
      Company Symbol:
      <input
        readonly
        type="text"
        name="companySymbol"
        class="text-black"
        value="<%= data.companySymbol%>"
      />
    </h4>
    <h4>
      Stock Price:
      <input
        readonly
        type="Number"
        name="stockPrice"
        class="text-black"
        value="<%= data.stockPrice%>"
      />
    </h4>
    <h4>
      Number of Stock:
      <input
        readonly
        type="Number"
        name="noOfStock"
        class="text-black"
        value="<%= data.noOfStock%>"
      />
    </h4>
    <h4>
      Total Amount:
      <input
        readonly
        type="Number"
        name="totalAmount"
        class="text-black"
        value="<%= totalAmount%>"
      />
    </h4>
    <input type="submit" value="BUY" class="text-black" />
  </form>
</div>
